{
  "manifest_version": 3,
  "name": "SalesNav Profile Capture",
  "description": "Capture real LinkedIn profile URLs + name/title/company/domain from Sales Navigator into custom lists and send to your backend.",
  "version": "1.1.0",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "SalesNav Capture"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*"
      ],
      "js": [
        "content/content_script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
